<style>
.born-stories-section {
  margin: 50px auto;
  font-family: Arial, sans-serif;
  max-width: 1200px;
}

.born-stories-heading {
  text-align: center;
  font-size: 24px;
  margin-bottom: 20px;
  border-top: 1px solid #C6C6C6;
  border-bottom: 1px solid #C6C6C6;
  color: #333333;
  font-family: Axiforma;
  font-size: 35px;
  font-weight: 400;
  line-height: 55.44px;
  letter-spacing: 0.5em;
  text-align: center;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  margin: unset;
  padding: 55px 0 37px 0;
}

.born-stories-content {
  display: flex;
  gap: 20px;
}

/* Featured Article Styling */
.featured-article {
  flex: 2;
}

.featured-article img {
  width: 100%;
  border-radius: 5px;
}

.featured-title {
  font-size: 20px;
  margin: 10px 0;
}

.featured-category {
  color: #2ecc71; /* Green text */
}

/* Small Articles Styling */
.small-articles {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.small-article {
  display: flex;
  gap: 10px;
  align-items: center;
}

.small-article img {
  width: 60px;
  height: 60px;
  border-radius: 5px;
  object-fit: cover;
}

.small-article-title {
  font-size: 14px;
  margin: 0;
}

.small-article-category {
  font-size: 12px;
  color: #2ecc71; /* Green text */
}

/* Responsive Adjustments for Mobile */
@media (max-width: 768px) {
  .born-stories-content {
    flex-direction: column;
    gap: 20px;
  }

  .featured-article,
  .small-articles {
    flex: none;
    width: 100%;
  }

  .small-article {
    gap: 15px;
    flex-direction: row;
  }

  .small-article img {
    width: 50px;
    height: 50px;
  }

  .featured-title {
    font-size: 18px;
    text-align: center;
  }

  .small-article-title {
    font-size: 12px;
  }

  .small-article-category {
    font-size: 11px;
  }
}

/* Adjustments for Smaller Screens (e.g., 480px or less) */
@media (max-width: 480px) {
  .born-stories-heading {
    font-size: 20px;
  }

  .featured-title {
    font-size: 16px;
  }

  .small-article img {
    width: 40px;
    height: 40px;
  }

  .small-article-title {
    font-size: 10px;
  }

  .small-article-category {
    font-size: 9px;
  }
}
</style>

<div class="born-stories-section" style="position: relative; z-index: 10;">
  <div class="container">
    <!-- Section Heading -->
    {% if section.settings.heading != blank %}
      <h2 class="born-stories-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="born-stories-content">
      <!-- Featured Article -->
      <div class="featured-article">
        {% if section.settings.featured_image != blank %}
          <img src="{{ section.settings.featured_image | image_url: width: 800 }}" alt="Featured Image">
        {% endif %}
        {% if section.settings.featured_title != blank %}
          <h3 class="featured-title">{{ section.settings.featured_title }}</h3>
        {% endif %}
        {% if section.settings.featured_category != blank %}
          <p class="featured-category">{{ section.settings.featured_category }}</p>
        {% endif %}
      </div>

      <!-- Small Articles -->
      <div class="small-articles">
        {% for block in section.blocks %}
          <a href="{{ block.settings.link }}" class="small-article">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 200 }}" alt="Small Article Image">
            {% endif %}
            <div class="small-article-content">
              {% if block.settings.title != blank %}
                <h4 class="small-article-title">{{ block.settings.title }}</h4>
              {% endif %}
              {% if block.settings.category != blank %}
                <p class="small-article-category">{{ block.settings.category }}</p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Born Stories Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Born Stories"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Article Image"
    },
    {
      "type": "text",
      "id": "featured_title",
      "label": "Featured Article Title",
      "default": "Why Zero-Carbon? Glad you asked."
    },
    {
      "type": "text",
      "id": "featured_category",
      "label": "Featured Article Category",
      "default": "Lab-Grown Guides"
    }
  ],
  "blocks": [
    {
      "type": "small_article",
      "name": "Small Article",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Article Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Article Title",
          "default": "Default Article Title"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Article Category",
          "default": "Fashion"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Article Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Born Stories Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
