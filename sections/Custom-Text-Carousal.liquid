<style>
.text-carousel-container {
  position: relative;
  width: 100%;
  overflow: hidden; /* Hide content overflowing the container */
  background: #D9D9D9;
  padding: 20px 0;
}

.text-carousel {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  animation: scroll 15s linear infinite; /* Smooth scrolling */
}

.text-carousel__item, .text-carousel__dot {
  display: inline;
  margin: 0 10px;
  font-family: Axiforma, sans-serif;
  font-size: 27px;
  font-weight: 700;
  line-height: 44.41px;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  color: #333333;
}

.text-carousel__dot {
  margin: 0 5px;
  color: #333333;
}

@keyframes scroll {
  from {
    transform: translateX(0); /* Start from the left */
  }
  to {
    transform: translateX(-100%); /* End after one full scroll */
  }
}
</style>

<div class="text-carousel-container">
  {% if section.settings.show_carousel %}
  <div id="TextCarousel-{{ section.id }}" class="text-carousel">
    {%- for block in section.blocks -%}
    <span class="text-carousel__item">{{ block.settings.text }}</span>
    <span class="text-carousel__dot">•</span>
    {%- endfor -%}
    <!-- Duplicate the items for seamless infinite scrolling -->
    {%- for block in section.blocks -%}
    <span class="text-carousel__item">{{ block.settings.text }}</span>
    <span class="text-carousel__dot">•</span>
    {%- endfor -%}
  </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Text Carousel",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_carousel",
      "label": "Show Text Carousel",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "carousel_item",
      "name": "Carousel Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Item Text",
          "default": "Example Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Carousel",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
