<style>
.banner--two-images {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  justify-content: space-between;
  gap: 0;
}

.banner__images {
  display: flex;
  width: 100%;
}

.banner__image {
  position: relative;
  flex: 1;
  max-width: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner__media-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.banner__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  max-width: 400px;
  width: 100%;
}

.banner__heading {
  font-family: Axiforma, sans-serif;
  font-size: 50px;
  font-weight: 400;
  line-height: 65px;
  text-align: center;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  color: #FFFFFF;
}

.button:after {
  box-shadow: unset !important;
}

.button {
  width: 307px;
  height: 50px;
  border-radius: 90px;
  border: 2px solid #FFFFFF;
  background: transparent;
  font-family: Axiforma, sans-serif; 
  font-size: 15px;
  font-weight: 400;
  line-height: 23.76px;
  text-align: center;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;

}

.anchor {
    font-family: Axiforma, sans-serif; 
    font-size: 15px;
    font-weight: 400;
    line-height: 23.76px;
    text-align: center;
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;
}

.button:hover {
  background: #FFFFFF;
  color: #333333;
}

/* Responsive design for mobile */
@media (max-width: 768px) {
  .banner__images {
    flex-direction: column; /* Stack the images vertically */
  }

  .banner__image {
    max-width: 100%; /* Make images take full width */
  }
}

@media only screen and (max-width: 500px) {
  
  .banner__heading {
    font-size: 30px; /* Adjust font size for mobile */
    line-height: 40px;
  }

  .button {
    width: 200px; /* Adjust button size for mobile */
    height: 40px;
  }
}
</style>


<div
  id="Banner-{{ section.id }}"
  class="banner banner--two-images {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="banner__images">
    {%- if section.settings.image != blank -%}
      <div class="banner__image banner__image--left">
        <img 
          src="{{ section.settings.image | image_url: width: 1920 }}" 
          alt="{{ section.settings.heading_1 }}" 
          class="banner__media-image"
        />
        <div class="banner__content">
          <h2 class="banner__heading">{{ section.settings.heading_1 }}</h2>
          <div class="button-container">
            <a href="{{ section.settings.button_link_1 }}" class="anchor" data-mobile="true">
              {{ section.settings.button_text_1 }}
            </a>
            <button class="button" data-desktop="true" style="display: none;">
              {{ section.settings.button_text_1 }}
            </button>
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.image_2 != blank -%}
      <div class="banner__image banner__image--right">
        <img 
          src="{{ section.settings.image_2 | image_url: width: 1920 }}" 
          alt="{{ section.settings.heading_2 }}" 
          class="banner__media-image"
        />
        <div class="banner__content">
          <h2 class="banner__heading">{{ section.settings.heading_2 }}</h2>
          <div class="button-container">
            <a href="{{ section.settings.button_link_2 }}" class="anchor" data-mobile="true">
              {{ section.settings.button_text_2 }}
            </a>
            <button class="button" data-desktop="true" style="display: none;">
              {{ section.settings.button_text_2 }}
            </button>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  // JavaScript to toggle button behavior based on screen size
  function updateButtonsForDevice() {
    const isMobile = window.innerWidth <= 768; // Define mobile breakpoint

    document.querySelectorAll('.button-container').forEach(container => {
      const mobileButton = container.querySelector('[data-mobile="true"]');
      const desktopButton = container.querySelector('[data-desktop="true"]');

      if (isMobile) {
        mobileButton.style.display = 'inline-block';
        desktopButton.style.display = 'none';
      } else {
        mobileButton.style.display = 'none';
        desktopButton.style.display = 'inline-block';
      }
    });
  }

  // Initial load
  updateButtonsForDevice();

  // Update on window resize
  window.addEventListener('resize', updateButtonsForDevice);
</script>

