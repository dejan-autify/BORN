      "type": "image_picker",
      "id": "image",
      "label": "First Image"
    },
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading for First Image"
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button Text for First Image"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button Link for First Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Image"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading for Second Image"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button Text for Second Image"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button Link for Second Image"
    }
  ],
  "presets": [
    {
      "name": "Two Images with Content",
      "category": "Banner"
    }
  ]
}
{% endschema %}
