<style>
/* General Styles */
.banner--two-images {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  justify-content: space-between;
  gap: 0;
}

.banner__images {
  display: flex;
  width: 100%;
}

.banner__image {
  position: relative;
  flex: 1;
  max-width: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner__media-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.banner__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  max-width: 400px;
  width: 100%;
}

.banner__heading {
  font-family: Axiforma, sans-serif;
  font-size: 50px;
  font-weight: 400;
  line-height: 65px;
  text-align: center;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  color: #FFFFFF;
  margin: 11.5px 0 23.45px 0;
}

.banner__small-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  font-family: Axiforma, sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 24px;
  text-align: center;
  color: #FFFFFF;
  gap: 12px;
}

.banner__small-text svg {
  margin-right: 8px;
}

.button-container {
  margin-top: 15px;
}

.button {
  width: 307px;
  height: 50px;
  border-radius: 90px;
  border: 2px solid #FFFFFF;
  background: transparent;
  font-family: Axiforma, sans-serif;
  font-size: 15px;
  font-weight: 400;
  line-height: 23.76px;
  text-align: center;
  color: #FFFFFF;
  cursor: pointer;
  display: inline-block;
}

.anchor {
  font-family: Axiforma, sans-serif;
  font-size: 15px;
  font-weight: 400;
  line-height: 23.76px;
  text-align: center;
  text-decoration-line: underline;
  text-decoration-style: solid;
  color: #FFFFFF;
  display: inline-block;
}

.button:after {
  box-shadow: unset !important;
}

.button:hover {
  background: #FFFFFF;
  color: #333333;
}

/* Differentiation for Mobile */
@media (max-width: 768px) {
  .banner__images {
    flex-direction: column; /* Stack the images vertically */
  }

  .banner__image {
    max-width: 100%; /* Make images take full width */
  }

  .button-container .button {
    display: block; /* Mobile-specific button styles */
  }

  .button-container .anchor {
    display: none; /* Hide anchor on mobile */
  }
}

/* Differentiation for Desktop */
@media (min-width: 769px) {
  .button-container .button {
    display: none; /* Hide button on desktop */
  }

  .button-container .anchor {
    display: block; /* Desktop-specific anchor styles */
  }
}

@media only screen and (max-width: 500px) {
  .banner__heading {
    font-size: 30px; /* Adjust font size for mobile */
    line-height: 40px;
  }

  .button {
    width: 200px; /* Adjust button size for mobile */
    height: 40px;
  }

  .banner__content {
    max-width: 314px;
  }
}
</style>

<div
  id="Banner-{{ section.id }}"
  class="banner banner--two-images {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="banner__images">
    {%- if section.settings.image != blank -%}
      <div class="banner__image banner__image--left">
        <img 
          src="{{ section.settings.image | image_url: width: 1920 }}" 
          alt="{{ section.settings.heading_1 }}" 
          class="banner__media-image"
        />
        <div class="banner__content">
          <div class="banner__small-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="22" viewBox="0 0 21 22" fill="none">
              <path d="M10.3662 21.6016C10.3662 16.2899 5.26023 11.1351 0 11.1351C5.26023 11.1351 10.3662 5.98026 10.3662 0.669678C10.3662 5.98026 15.4722 11.1351 20.7324 11.1351C15.4722 11.1351 10.3662 16.2899 10.3662 21.6016Z" fill="white"/>
            </svg>
            {{ section.settings.small_text_1 }}
          </div>
          <h2 class="banner__heading">{{ section.settings.heading_1 }}</h2>
          <div class="button-container">
            <button class="button">{{ section.settings.button_text_1 }}</button>
            <a href="#" class="anchor">Learn More</a>
          </div>
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.image_2 != blank -%}
      <div class="banner__image banner__image--right">
        <img 
          src="{{ section.settings.image_2 | image_url: width: 1920 }}" 
          alt="{{ section.settings.heading_2 }}" 
          class="banner__media-image"
        />
        <div class="banner__content">
          <div class="banner__small-text">
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="22" viewBox="0 0 21 22" fill="none">
              <path d="M10.3662 21.6016C10.3662 16.2899 5.26023 11.1351 0 11.1351C5.26023 11.1351 10.3662 5.98026 10.3662 0.669678C10.3662 5.98026 15.4722 11.1351 20.7324 11.1351C15.4722 11.1351 10.3662 16.2899 10.3662 21.6016Z" fill="white"/>
            </svg>
            {{ section.settings.small_text_2 }}
          </div>
          <h2 class="banner__heading">{{ section.settings.heading_2 }}</h2>
          <div class="button-container">
            <button class="button">{{ section.settings.button_text_2 }}</button>
            <a href="#" class="anchor">Learn More</a>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>
